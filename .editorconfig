# Learn more about EditorConfig at:
# https://editorconfig.org/

# Find the EditorConfig extension for Visual Studio Code at:
# https://marketplace.visualstudio.com/items?itemName=EditorConfig.EditorConfig

root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
tab_width = 4

[*.{js,css,html}]
indent_style = space
indent_size = 2

[*.md]
insert_final_newline = false
indent_style = space

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2
